<resources>
    <!-- Base application theme -->
    <style name="Theme.ProductShowcase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary color -->
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryVariant">@color/sky_blue_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Dark theme background -->
        <item name="android:colorBackground">@android:color/black</item>

        <!-- Toolbar -->
        <item name="android:actionBarStyle">@style/Widget.YourAppName.Toolbar</item>
    </style>

    <style name="Widget.YourAppName.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/sky_blue</item>
        <item name="android:titleTextColor">@android:color/white</item>
        <item name="android:navigationIcon">@drawable/ic_arrow_back</item>
    </style>
</resources>
